<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="116dp">
    <android.support.v7.widget.CardView
        android:layout_width="337dp"
        android:layout_gravity="center"
        app:cardCornerRadius="6dp"
        android:layout_height="116dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="72dp"
                android:background="@color/color_44cbfe"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:text="20/08"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="56dp"
                    android:src="@mipmap/dt"
                    android:layout_height="47dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/itinerary"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/phoneNumber1"
                    android:text="@string/mobile_number"
                    android:textColor="@color/color_999"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="14dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/phoneNumber"
                    android:text="18888888888"
                    android:layout_below="@+id/phoneNumber1"
                    android:textColor="#1D1D1D"
                    android:layout_marginLeft="12dp"
                    android:includeFontPadding="false"
                    android:layout_marginTop="6dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vourchTime1"
                    android:text="@string/time"
                    android:textColor="@color/color_999"
                    android:layout_below="@+id/phoneNumber"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/vourchTime"
                    android:text="2020:20:20"
                    android:layout_below="@+id/vourchTime1"
                    android:textColor="#1D1D1D"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_enter1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/blockchain_credential"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_qukuailian_vourch"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>