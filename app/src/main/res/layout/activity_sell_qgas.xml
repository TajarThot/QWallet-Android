<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvUnitPriceTip"
            android:layout_width="wrap_content"
            android:text="@string/unit_price_usdt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x30"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvUnitPrice"
            android:text="-/-"
            android:layout_width="wrap_content"
            android:textColor="@color/color_ff3669"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x10"
            android:textSize="23sp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/x40"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0px"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvVolumeAmount"
                    android:layout_width="wrap_content"
                    android:text="@string/volume_amount_qgas"
                    android:textColor="@color/color_808080"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:text="-/-"
                    android:textSize="13sp"
                    android:textColor="@color/color_29282a"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/x63"
                android:background="@color/color_f2f2f2"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvVolumeSetting"
                    android:layout_width="wrap_content"
                    android:text="@string/limits"
                    android:textColor="@color/color_808080"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvQgasVolume"
                    android:layout_width="wrap_content"
                    android:text="-/-"
                    android:textSize="13sp"
                    android:textColor="@color/color_29282a"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_f2f2f2"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/selling_amount"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x30"
            android:textColor="@color/color_29282a"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/x21"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="@dimen/x92">
            <EditText
                android:id="@+id/etQgas"
                android:layout_width="0px"
                android:layout_weight="1"
                android:hint="Max 10000"
                android:inputType="numberDecimal"
                android:background="@null"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/x4"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTradeToken"
                android:text="-/-"
                android:layout_marginRight="@dimen/x31"
                android:layout_width="wrap_content"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/color_f2f2f2"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/to_receive"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x30"
            android:textColor="@color/color_29282a"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/x21"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="@dimen/x92">
            <EditText
                android:id="@+id/etUsdt"
                android:layout_width="0px"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="Max 200"
                android:inputType="numberDecimal"
                android:background="@null"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/x4"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPayToken"
                android:text="-/-"
                android:layout_marginRight="@dimen/x31"
                android:layout_width="wrap_content"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/color_f2f2f2"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/send_to"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x30"
            android:textColor="@color/color_29282a"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/x21"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/llSelectReceiveWallet"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/x138">

            <ImageView
                android:id="@+id/ivReceiveChain"
                android:layout_width="@dimen/x88"
                android:layout_marginLeft="@dimen/x30"
                android:layout_height="@dimen/x88" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/select_a_wallet_to_receive_token"
                    android:maxEms="12"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a"
                    android:singleLine="true"
                    android:maxWidth="@dimen/x480"
                    android:layout_marginLeft="@dimen/x30"
                    android:id="@+id/tvReceiveWalletName"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a_40"
                    android:text="@string/input_wallet_address"
                    android:layout_marginTop="@dimen/x10"
                    android:maxEms="12"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:maxWidth="@dimen/x400"
                    android:id="@+id/tvReceiveWalletAddess"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:padding="@dimen/x15"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="@dimen/x60"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_enter1"
                android:layout_height="@dimen/x60" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/color_f2f2f2"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/receive_from"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x30"
            android:textColor="@color/color_29282a"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/x21"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/llSelectSendWallet"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/x138">

            <ImageView
                android:id="@+id/ivSendChain"
                android:layout_width="@dimen/x88"
                android:layout_marginLeft="@dimen/x30"
                android:layout_height="@dimen/x88" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/select_a_wallet_to_send_out_token"
                    android:maxEms="15"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:id="@+id/tvSendWalletName"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a_40"
                    android:layout_marginTop="@dimen/x10"
                    android:maxEms="10"
                    android:ellipsize="middle"
                    android:text="@string/select_a_wallet"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:maxWidth="@dimen/x400"
                    android:id="@+id/tvSendWalletAddess"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:padding="@dimen/x15"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="@dimen/x60"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_enter1"
                android:layout_height="@dimen/x60" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/color_f2f2f2"/>

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x60"
            android:background="@drawable/main_color_bt_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/submit"
            android:textSize="16sp"
            android:layout_height="@dimen/x94" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>