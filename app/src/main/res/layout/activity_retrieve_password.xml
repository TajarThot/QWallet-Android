<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x46"
    android:background="@color/white"
    android:paddingRight="@dimen/x46"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llEmail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="邮箱"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llphone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <TextView
            android:layout_width="wrap_content"
            android:text="+86"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:hint="手机号"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:textSize="16sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvVerificationCode"
            android:layout_width="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/color_b3b3b3"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="设定新密码（6位或以上）"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="重复密码（6位或以上）"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <TextView
        android:id="@+id/retrieveMode"
        android:layout_width="wrap_content"
        android:text="邮箱找回"
        android:layout_marginTop="@dimen/x30"
        android:textSize="16sp"
        android:textColor="@color/mainColor"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/x60"
        android:gravity="center"
        android:text="确定"
        android:background="@drawable/main_color_bt_bg"
        android:layout_height="@dimen/x94" />
</LinearLayout>