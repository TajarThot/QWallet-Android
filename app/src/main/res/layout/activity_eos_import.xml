<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:text="Account"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/accountName"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x10"
            android:layout_height="@dimen/x80"
            android:text=""
            android:background="@null"
            android:gravity="center_vertical"
            android:textColorHint="#d9d9d9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/color_29282a_40"
        android:layout_height="@dimen/x1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:text="Owner Private Key"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/accountOwnerKey"
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:text=""
            android:background="@null"
            android:gravity="center_vertical"
            android:textColorHint="#d9d9d9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/color_29282a_40"
        android:layout_height="@dimen/x1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:text="Active Private Key"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/accountActiveKey"
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:text=""
            android:layout_height="@dimen/x80"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColorHint="#d9d9d9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/color_29282a_40"
        android:layout_height="@dimen/x1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:text="Account Password"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/accountPassword"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x10"
            android:layout_height="@dimen/x80"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColorHint="#d9d9d9" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/color_29282a_40"
        android:layout_height="@dimen/x1" />

    <Button
        android:id="@+id/btImport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/x44"
        android:layout_marginRight="@dimen/x44"
        android:layout_marginTop="@dimen/x80"
        android:background="@drawable/bt_white_bg"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/import2"
        android:textAllCaps="false"
        android:textColor="@color/mainColor" />

</LinearLayout>