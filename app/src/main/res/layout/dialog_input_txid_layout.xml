<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/x500"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/x20"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/x500"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/x500"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:text="@string/transaction_id"
                    android:textColor="@color/color_29282a"
                    android:layout_marginTop="@dimen/x60"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etContent"
                    android:layout_width="match_parent"
                    android:background="@drawable/wallet_address_bg_2"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:padding="@dimen/x10"
                    android:gravity="top"
                    android:hint="@string/transaction_id"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x20"
                    android:minHeight="@dimen/x120"
                    android:textColor="@color/color_333" />

                <TextView
                    android:id="@+id/tv_warn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="The system will verify the Transction ID you filled. "
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x20"
                    android:textColor="@color/color_d0021b" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@color/color_29282a_40"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x96"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="@string/cancel"
                        android:textColor="@color/mainColor" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:background="@color/color_29282a_40"/>

                    <TextView
                        android:id="@+id/tvOk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="@string/ok"
                        android:textColor="@color/mainColor" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivQRCode"
                android:visibility="gone"
                android:background="@color/white"
                android:padding="@dimen/x20"
                android:layout_width="@dimen/x500"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x120"
                android:layout_height="@dimen/x340" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>