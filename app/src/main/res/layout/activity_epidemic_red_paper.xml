<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/f6f6f6"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/dailyStep"
                android:layout_width="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:textColor="@color/color_29282a"
                android:text="@string/daily_steps"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ivRefresh"
                android:layout_width="15dp"
                android:src="@mipmap/me_refresh"
                android:layout_alignTop="@+id/dailyStep"
                android:layout_alignBottom="@+id/dailyStep"
                android:layout_toRightOf="@+id/dailyStep"
                android:layout_marginLeft="11dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/tvDailyStep"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_29282a"
                android:textSize="31sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvCumulativeQgas"
                android:layout_width="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/icon_enter1"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@color/color_29282a"
                android:text="@string/cumulative_qgas_claimed"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvAllQlc"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_29282a"
                android:layout_marginRight="16dp"
                android:textSize="31sp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/today_s_bounty_to_claim"
            android:textColor="#747576"
            android:textSize="13sp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_height="38dp"/>

        <TextView
            android:id="@+id/tvNoRedPaper"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/you_have_claimed_the_bounty_for_today_come_back_here_tomorrow"
            android:textColor="#747576"
            android:textSize="13sp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="1dp"
            android:layout_height="78dp"/>

        <LinearLayout
            android:id="@+id/llFocus"
            android:visibility="gone"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_height="78dp">
            <ImageView
                android:layout_width="38dp"
                android:src="@mipmap/sheet_red_qlc"
                android:layout_marginLeft="12dp"
                android:layout_height="48dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/daily_bounty"
                    android:textSize="13sp"
                    android:textColor="#0e0e0e"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvFocusContent"
                    android:layout_width="wrap_content"
                    android:maxWidth="240dp"
                    android:textColor="@color/color_999"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:text="@string/claim_daily_qgas_bounty_simply_by_checking_out_the_covid_19_live_updates_page_for_1_consecutive_day"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvFocus"
                android:layout_width="65dp"
                android:text="@string/check"
                android:gravity="center"
                android:background="@drawable/oval_maincolor_stroke_bg"
                android:layout_marginRight="12dp"
                android:textSize="11sp"
                android:textColor="@color/mainColor"
                android:layout_height="25dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginRight="12dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="12dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_height="78dp">
            <ImageView
                android:layout_width="38dp"
                android:src="@mipmap/sheet_red_no"
                android:layout_marginLeft="12dp"
                android:layout_height="48dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/qlc_social_distancing_bounty"
                    android:textSize="13sp"
                    android:textColor="#0e0e0e"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvQlcAmount"
                    android:layout_width="wrap_content"
                    android:maxWidth="180dp"
                    android:textColor="@color/color_999"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvNoOutSide"
                android:layout_width="65dp"
                android:gravity="center"
                android:background="@drawable/oval_eceff5_bg"
                android:layout_marginRight="12dp"
                android:textSize="11sp"
                android:textColor="@color/color_9496a1"
                android:layout_height="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recyclerViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/tvDoneDays"
                android:textSize="11sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/rules_for_covid_19_bounty"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:textColor="@color/color_29282a"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvIntroduce"
            android:textSize="11sp"
            android:textColor="@color/color_808080"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:text="@string/_1_how_to_claim_qlc_for_staking_daily_bounty_check_out_the_covid_19_live_updates_page_at_least_once_a_day_you_are_entitled_to_claim_daily_qgas_bounty_in_your_qgas_wallet_the_qgas_amount_is_calculated_based_on_that_earned_from_100_qlc_for_staking_2_how_to_claim_social_distancing_bounty_check_out_the_covid_19_live_updates_page_at_least_once_a_day_with_your_daily_steps_no_greater_than_1000_for_consecutive_14_days_you_are_entitled_to_claim_100_qlc_the_reward_will_be_sent_to_your_nep_5_wallet_when_claimed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>