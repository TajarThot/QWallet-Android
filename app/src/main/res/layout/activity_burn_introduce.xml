<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainColor"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="96dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/qgas_buyback_and_burn_1"
                android:layout_marginLeft="16dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="82dp"
                android:src="@mipmap/buyback"
                android:layout_height="96dp"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="14dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="14dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/program_time"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_13dp_maincolor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="18dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/_10_days"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/mainColor"
                    android:textSize="13sp"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/buyback_price"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_13dp_maincolor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="18dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="1QGas= 2 QLC"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/mainColor"
                    android:textSize="13sp"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/program_implementation_1"
                    android:layout_marginTop="33dp"
                    android:background="@drawable/bg_13dp_maincolor"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="18dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/program_implementation"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:lineSpacingExtra="7sp"
                    android:textColor="@color/mainColor"
                    android:layout_marginBottom="20dp"
                    android:textSize="13sp"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>