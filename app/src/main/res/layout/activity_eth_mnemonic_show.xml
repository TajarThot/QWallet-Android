<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x12"
        android:text="WALLET CREATED SUCCESSFULLY"
        android:textColor="@color/color_1F314A"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChoose"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginTop="@dimen/x25"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/color_9b9b9bb"
        android:text="Mnemonic is used to restore your wallet. Anyone who has your mnemonic can control your wallet, SO keepit in a safe place to prevent the loss of your assets. Kcash does not store user 'S mnemonics and can not help you to retrieve them. "
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvMnemonic"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:background="#eae5f0"
        android:textColor="@color/mainColor"
        android:layout_marginTop="@dimen/x35"
        android:textSize="19sp"
        android:paddingTop="@dimen/x35"
        android:paddingBottom="@dimen/x35"
        android:paddingLeft="@dimen/x45"
        android:paddingRight="@dimen/x45"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btBackup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/x44"
        android:layout_marginRight="@dimen/x44"
        android:layout_marginTop="@dimen/x220"
        android:background="@drawable/change_wallet"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMnemonic" />
</android.support.constraint.ConstraintLayout>