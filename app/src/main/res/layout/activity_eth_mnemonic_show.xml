<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x25"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/x8"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/dot_29292a_bg"
            android:layout_height="@dimen/x8" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_29282a"
            android:text="It is created successfullyï¼ŒMnemonic is used to restore your wallet."
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x25"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/x8"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/dot_29292a_bg"
            android:layout_height="@dimen/x8" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_29282a"
            android:text="Anyone who has your mnemonic can control your wallet, SO keepit in a safe place to prevent the loss of your assets. "
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x25"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/x8"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/dot_29292a_bg"
            android:layout_height="@dimen/x8" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="Q-Wallet does not store user's mnemonics and can not help you to retrieve them. "
            android:textColor="@color/color_29282a"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMnemonic"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/ll3"
        android:background="#eae5f0"
        android:textColor="@color/mainColor"
        android:layout_marginTop="@dimen/x35"
        android:textSize="19sp"
        android:paddingTop="@dimen/x35"
        android:paddingBottom="@dimen/x35"
        android:paddingLeft="@dimen/x45"
        android:paddingRight="@dimen/x45"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btBackup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginLeft="@dimen/x44"
        android:layout_marginRight="@dimen/x44"
        android:layout_marginTop="@dimen/x220"
        android:background="@drawable/change_wallet"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMnemonic" />
</android.support.constraint.ConstraintLayout>