<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x138"
    android:layout_marginLeft="@dimen/x30"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x12"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_friend"
            android:layout_width="@dimen/x90"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/x90"
            android:layout_marginRight="@dimen/x14">

            <ImageView
                android:id="@+id/freind_avater"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/x75"
                android:layout_centerInParent="true"
                android:src="@mipmap/img_default_avatar" />

            <ImageView
                android:id="@+id/friend_status"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/x2"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginLeft="@dimen/x10" />

            <ImageView
                android:id="@+id/message_status"
                android:layout_width="@dimen/x30"
                android:visibility="gone"
                android:layout_height="@dimen/x30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x5" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vpn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:includeFontPadding="false"
                android:maxEms="7"
                android:text="@string/ssid"
                android:layout_marginBottom="-3dp"
                android:textColor="@color/color_29282a"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular_q"
                android:text=""
                android:textColor="@color/color_a8a6a6"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="@dimen/x23"
                    android:src="@mipmap/winq_gas_n"
                    android:layout_height="@dimen/x23" />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="@dimen/x5"
                    android:fontFamily="@font/roboto_regular_q"
                    android:textColor="@color/color_333"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="@dimen/x23"
                    android:src="@mipmap/xin"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_height="@dimen/x23" />
                <TextView
                    android:id="@+id/connect_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="@dimen/x5"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/color_333"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/switchBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:kswAnimationDuration="0"
            android:enabled="false"
            android:checked="false"
            app:kswBackColor="@color/white"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswThumbDrawable="@drawable/ios_thumb_drawable"
            app:kswThumbMargin="0px"
            app:kswThumbHeight="@dimen/x45"
            app:kswThumbRangeRatio="2.2"
            app:kswThumbWidth="@dimen/x45"
            app:kswTintColor="@color/content_background" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_a8a6a6" />
    <View
        android:id="@+id/viewOnline"
        android:layout_width="match_parent"
        android:background="#6cffffff"
        android:layout_height="match_parent"/>
</RelativeLayout>