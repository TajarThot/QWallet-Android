<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rlPartTuan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scv"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_f2f2f2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="46dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/phone_number"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etContact"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="27dp"

                        android:textSize="13sp"
                        android:inputType="phone"
                        android:gravity="right|center_vertical"
                        android:hint="@string/phone_number"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:textColor="@color/color_29282a" />
                    <ImageView
                        android:id="@+id/ivContact"
                        android:layout_width="21dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/contacts"
                        android:layout_height="21dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_f2f2f2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:minHeight="134dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="116dp"
                        app:cardCornerRadius="6dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:cardElevation="0dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/ivProduct1"
                            android:layout_width="116dp"
                            android:layout_height="90dp"/>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/cardView"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvOperator"
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_2b2b2b"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvIsp"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_9a9a9a"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvArea"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_9a9a9a"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_f63870"
                            android:textSize="13sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/llGroup"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/the_plan"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvGroupType"
                        android:layout_width="180dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/main_color_bt_bg"
                        android:layout_height="32dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_height="58dp">
                        <RelativeLayout
                            android:id="@+id/rlAvatar"
                            android:layout_width="52dp"
                            android:layout_height="33dp">

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="12dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvGroupInfo"
                                android:layout_width="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/color_1e1e24"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvNeedPartners"
                                android:layout_width="wrap_content"
                                android:textColor="@color/color_ff5956"
                                android:textSize="10sp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvRemainTime"
                                android:layout_width="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/color_808080"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/color_f2f2f2"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/rules_group"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_808080"
                        android:text="@string/group_rule"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tvConfirm"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/confirm"
                    android:background="@drawable/main_color_bt_bg"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="37dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>
</LinearLayout>