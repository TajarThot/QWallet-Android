<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/x500"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/x20">

        <LinearLayout
            android:layout_width="@dimen/x500"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/close_h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Detail"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_29282a"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_marginTop="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_29282a"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/x48"
                android:layout_height="@dimen/x1"
                android:background="@color/color_29282a_40"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Payment lnfo"
                android:layout_marginTop="@dimen/x42"
                android:layout_marginLeft="@dimen/x45"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPaymentType"
                android:layout_width="wrap_content"
                android:textColor="@color/color_29282a"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginLeft="@dimen/x45"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="To"
                android:layout_marginTop="@dimen/x42"
                android:layout_marginLeft="@dimen/x45"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="wrap_content"
                android:textColor="@color/color_29282a"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginLeft="@dimen/x45"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="From"
                android:layout_marginTop="@dimen/x42"
                android:layout_marginLeft="@dimen/x45"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="wrap_content"
                android:textColor="@color/color_29282a"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginLeft="@dimen/x45"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/color_29282a_40"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x96"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/mainColor"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>