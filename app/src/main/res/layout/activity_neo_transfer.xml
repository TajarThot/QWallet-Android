<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:layout_constraintLeft_toRightOf="parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNeoTokenName"
        android:layout_marginLeft="@dimen/x45"
        android:textColor="@color/color_29282a_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNeoTokenValue"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/mainColor"
        android:layout_marginRight="@dimen/x40"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x56"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <EditText
        android:id="@+id/etNeoTokenSendValue"
        app:layout_constraintTop_toBottomOf="@+id/tvNeoTokenName"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x45"
        android:textColor="@color/color_29282a"
        android:layout_marginTop="@dimen/x10"
        android:inputType="numberDecimal"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvNeoTokenName"
        android:layout_marginRight="@dimen/x40"
        android:hint="Amount"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view1"
        android:layout_marginLeft="@dimen/x45"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/etNeoTokenSendValue"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x25"
        android:background="@color/color_29282a_40"/>

    <TextView
        android:id="@+id/sendto"
        android:text="Send to"
        android:textColor="@color/color_29282a_40"
        app:layout_constraintLeft_toLeftOf="@+id/tvNeoTokenName"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:layout_marginTop="@dimen/x25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etNeoTokenSendAddress"
        app:layout_constraintTop_toBottomOf="@+id/sendto"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginTop="@dimen/x10"
        android:textSize="15sp"
        android:textColor="@color/color_29282a"
        android:hint="NEO Wallet Address"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x45"
        app:layout_constraintTop_toBottomOf="@+id/etNeoTokenSendAddress"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x25"
        android:background="@color/color_29282a_40"/>

    <TextView
        android:id="@+id/Memo"
        android:text="Memo"
        android:textColor="@color/color_29282a_40"
        app:layout_constraintLeft_toLeftOf="@+id/tvNeoTokenName"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginTop="@dimen/x25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etEthTokenSendMemo"
        app:layout_constraintTop_toBottomOf="@+id/Memo"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginTop="@dimen/x10"
        android:textSize="15sp"
        android:textColor="@color/color_29282a"
        android:hint="if any"
        android:background="@null"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x45"
        app:layout_constraintTop_toBottomOf="@+id/etEthTokenSendMemo"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x25"
        android:background="@color/color_29282a_40"/>

    <TextView
        android:id="@+id/tvSend"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_marginTop="@dimen/x300"
        android:layout_marginLeft="@dimen/x45"
        android:text="@string/send"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginRight="@dimen/x45"
        android:background="@drawable/main_color_bt_bg"
        android:layout_height="@dimen/x94" />

</android.support.constraint.ConstraintLayout>