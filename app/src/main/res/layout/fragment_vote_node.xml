<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="58dp"
            android:src="@mipmap/mining_node"
            android:layout_marginTop="23dp"
            android:layout_height="58dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_voting_mining_node"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_29282a"
            android:textSize="13sp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="@string/stake_from"
            android:textSize="15sp"
            android:textColor="@color/color_29282a"
            android:paddingLeft="15dp"
            android:layout_height="31dp" />
        <LinearLayout
            android:id="@+id/llSelectNeoWallet"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="61dp">

            <ImageView
                android:layout_width="31dp"
                android:src="@mipmap/icons_neo_wallet"
                android:layout_marginLeft="15dp"
                android:layout_height="31dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/select_a_neo_wallet"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:id="@+id/tvNeoWalletName"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a_40"
                    android:layout_marginTop="@dimen/x10"
                    android:maxEms="10"
                    android:textSize="13sp"
                    android:ellipsize="middle"
                    android:text="@string/select_a_neo_wallet"
                    android:singleLine="true"
                    android:maxWidth="@dimen/x400"
                    android:id="@+id/tvNeoWalletAddess"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_enter1"
                android:layout_height="15dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:text="@string/select_a_nep_5_address_you_want_to_stake_qlc_from"
            android:textSize="12sp"
            android:textColor="@color/color_808080"
            android:paddingRight="21dp"
            android:paddingLeft="21dp"
            android:paddingBottom="11dp"
            android:paddingTop="4dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="@string/stake_to"
            android:textSize="15sp"
            android:textColor="@color/color_29282a"
            android:paddingLeft="15dp"
            android:layout_height="31dp" />
        <LinearLayout
            android:id="@+id/llSelectQlcWallet"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="61dp">

            <ImageView
                android:id="@+id/iv_country"
                android:layout_width="31dp"
                android:src="@mipmap/icons_qlc_wallet"
                android:layout_marginLeft="15dp"
                android:layout_height="31dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/select_a_qlc_chain_address"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:id="@+id/tvQLCWalletName"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a_40"
                    android:layout_marginTop="@dimen/x10"
                    android:maxEms="10"
                    android:textSize="13sp"
                    android:ellipsize="middle"
                    android:text="@string/select_a_qlc_chain_address"
                    android:singleLine="true"
                    android:maxWidth="@dimen/x400"
                    android:id="@+id/tvQLCWalletAddess"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_enter1"
                android:layout_height="15dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:text="@string/select_a_qlc_chain_address_you_want_to_receive_your_qgas_to"
            android:textSize="12sp"
            android:textColor="@color/color_808080"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingBottom="11dp"
            android:paddingTop="4dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="46dp">
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="@string/amount_stake"
                android:textSize="15sp"
                android:textColor="@color/color_29282a"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvQlcBalance"
                android:layout_width="wrap_content"
                android:textColor="@color/mainColor"
                android:textSize="13sp"
                android:text="Balance: -/- QLC"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="46dp">
            <EditText
                android:id="@+id/etStakeQlcAmount"
                android:layout_width="0px"
                android:layout_weight="1"
                android:hint="@string/from_1_qlc"
                android:maxLength="9"
                android:inputType="number"
                android:background="@null"
                android:textSize="15sp"
                android:textColor="@color/color_29282a"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/color_29282a"
                android:textSize="13sp"
                android:text="QLC"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:text="@string/the_minimum_stake_amount_is_1_00_qlc"
            android:textSize="12sp"
            android:textColor="@color/color_808080"
            android:paddingRight="21dp"
            android:paddingLeft="21dp"
            android:paddingBottom="11dp"
            android:paddingTop="4dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="46dp">
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="@string/sraking_period"
                android:textSize="15sp"
                android:textColor="@color/color_29282a"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="46dp">
            <EditText
                android:id="@+id/etStakeDays"
                android:layout_width="0px"
                android:layout_weight="1"
                android:maxLength="5"
                android:hint="@string/from_10"
                android:inputType="number"
                android:background="@null"
                android:textSize="15sp"
                android:textColor="@color/color_29282a"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/color_29282a"
                android:textSize="13sp"
                android:text="@string/days"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:text="@string/the_minimum_period_is_10_days"
            android:textSize="12sp"
            android:textColor="@color/color_808080"
            android:paddingRight="21dp"
            android:paddingLeft="21dp"
            android:paddingBottom="11dp"
            android:paddingTop="4dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:layout_height="71dp">
            <TextView
                android:id="@+id/invoke"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                android:text="@string/invoke"
                android:background="@drawable/unable_bt_bg"
                android:layout_height="47dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>