<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x138"
    android:layout_marginLeft="@dimen/x25"
    android:id="@+id/ll_root"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_country"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_29282a"
                android:maxEms="8"
                android:ellipsize="middle"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/x30"
                android:maxWidth="@dimen/x400"
                android:id="@+id/tv_country_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_29282a_40"
                android:layout_marginTop="@dimen/x10"
                android:maxEms="8"
                android:ellipsize="middle"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/x30"
                android:maxWidth="@dimen/x400"
                android:id="@+id/tvWalletAddess"
                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginRight="@dimen/x35"
            android:src="@mipmap/selected" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#e5e5e5"
        />
</LinearLayout>