<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:textColor="@color/color_1F314A"
        android:layout_marginTop="@dimen/x35"
        android:text="Ethereum's official wallet uses keystore format to store encrypted private key information, you can copy and paste the content into the input field, or with the help of QR code generator. "
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x45"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginTop="@dimen/x35">
        <RelativeLayout
            android:layout_width="match_parent"
            android:minHeight="@dimen/x242"
            android:orientation="vertical"
            android:layout_height="@dimen/x242">
            <EditText
                android:id="@+id/etKeystore"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/x20"
                android:gravity="left"
                android:textSize="14sp"
                android:background="@null"
                android:hint="Keystore content"
                android:layout_height="@dimen/x160" />
            <TextView
                android:id="@+id/tvWhatsMnemonic"
                android:layout_width="wrap_content"
                android:text="What is a keystore?"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginBottom="@dimen/x20"
                android:textColor="@color/mainColor"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        app:passwordToggleEnabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_password"
            android:hint="@string/password"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x60"
            android:imeOptions="actionGo"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>

