<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/line"
        android:layout_marginLeft="@dimen/x59"
        android:layout_marginRight="@dimen/x27"
        android:background="@color/colorFade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x126"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_one"
            android:src="@mipmap/icon_trophy"
            android:layout_width="@dimen/x35"
            android:layout_marginLeft="@dimen/x14"
            android:layout_height="@dimen/x35" />
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="@dimen/x35"
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_marginLeft="@dimen/x14"
            android:gravity="center"
            android:layout_height="@dimen/x35" />
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x73"
            android:layout_marginLeft="@dimen/x14"
            android:layout_height="@dimen/x73" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_asset_name"
                android:textSize="14sp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_prized"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_prized_number"
                    android:textColor="@color/color_333"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_prized"
                    android:layout_marginLeft="@dimen/x5"
                    android:textSize="12sp"
                    android:textColor="@color/colorFade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_connect_count"
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/x27"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tip"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x39"
        android:layout_marginRight="@dimen/x7"
        android:background="@color/white"
        android:layout_height="@dimen/x100">
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/x20"
            android:text="@string/earn_50_qlc_to_activate_your_asset_ranking"
            android:gravity="center_vertical"
            android:padding="@dimen/x10"
            android:textColor="@color/colorFade"
            android:background="@drawable/rank_earn_qlc_bg"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>