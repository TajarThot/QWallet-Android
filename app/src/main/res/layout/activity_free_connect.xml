<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/x14"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="@dimen/x10"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_count"
                android:textColor="@color/main_color"
                android:textSize="48sp"
                android:fontFamily="@font/vagroundedbt"
                android:layout_marginTop="@dimen/x45"
                android:layout_width="wrap_content"
                android:text="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/main_color"
                android:textSize="15sp"
                android:fontFamily="@font/vagroundedbt"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVAILABLE"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:text="HISTORY RECORD"
        android:layout_marginLeft="@dimen/x64"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/x14"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="@dimen/x10"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>
</LinearLayout>