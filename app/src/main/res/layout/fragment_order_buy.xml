<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_height="@dimen/x138">
        <TextView
            android:id="@+id/tvUnitPrice"
            android:layout_width="wrap_content"
            android:text="Unit Price"
            android:textSize="16sp"
            android:textColor="@color/color_29282a"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/x21"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etUnitPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvUnitPrice"
            android:layout_width="match_parent"
            android:hint="Unit Price"
            android:background="@null"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/x4"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/etUnitPrice"
            app:layout_constraintTop_toTopOf="@id/etUnitPrice"
            android:text="USDT"

            android:layout_marginRight="@dimen/x31"
            android:layout_width="wrap_content"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/color_f2f2f2"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_height="@dimen/x138">
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:text="Amount"
            android:textSize="16sp"
            android:textColor="@color/color_29282a"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/x21"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvAmount"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:hint="Total Amount"
            android:background="@null"
            android:inputType="number"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/x4"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintRight_toRightOf="parent"
            android:text="QGAS"
            app:layout_constraintBottom_toBottomOf="@id/etAmount"
            app:layout_constraintTop_toTopOf="@id/etAmount"
            android:layout_marginRight="@dimen/x31"
            android:layout_width="wrap_content"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/color_f2f2f2"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Volume Settings"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/color_29282a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/x21"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x12"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal"
        android:layout_height="@dimen/x42">
        <EditText
            android:id="@+id/etMinAmount"
            android:layout_width="0px"
            android:layout_weight="1"
            android:hint="Min Amount"
            android:textSize="16sp"
            android:inputType="number"
            android:background="@null"
            android:layout_height="match_parent" />
        <View
            android:layout_width="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="#979797"
            android:layout_height="@dimen/x2" />
        <EditText
            android:id="@+id/etMaxAmount"
            android:layout_width="0px"
            android:background="@null"
            android:hint="Max Amount"
            android:inputType="number"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/color_f2f2f2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x8"
        android:textColor="@color/color_808080"
        android:text="The Min Amount should be equal or greater than 1. And the Max Amount should be equal or less than the Total Amount you set."
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/color_f2f2f2"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="QLC Chain Address to receive QGAS"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/color_29282a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/x21"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etReceiveAddress"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="QLC Chain Wallet Address"
            android:minHeight="@dimen/x77"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="@dimen/x15"
            android:id="@+id/walletMore"
            android:layout_width="@dimen/x60"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_enter1"
            android:rotation="90"
            android:layout_height="@dimen/x60" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/color_f2f2f2"/>

    <TextView
        android:id="@+id/tvCreateWallet"
        android:layout_width="match_parent"
        android:text="@string/create_one_now"
        android:gravity="right"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x4"
        android:textColor="@color/mainColor"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x60"
        android:background="@drawable/main_color_bt_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/confirm"
        android:textSize="16sp"
        android:layout_height="@dimen/x94" />
</LinearLayout>