<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llBuyToken"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/buying"
                android:textColor="@color/color_29282a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/buyingToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="-/-"
                android:textColor="@color/color_29282a"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_enter1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_f2f2f2" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x138"
            android:layout_marginLeft="@dimen/x30">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x21"
                android:text="@string/buying_amount"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x4"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAmount" />

            <TextView
                android:id="@+id/buyingTokenPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x31"
                android:text="-/-"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/etAmount"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/etAmount" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/color_f2f2f2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x21"
            android:text="@string/limits"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x12"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etMinAmount"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/min_amount"
                android:inputType="numberDecimal"
                android:textSize="16sp" />

            <View
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x2"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="#979797" />

            <EditText
                android:id="@+id/etMaxAmount"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/max_amount"
                android:inputType="numberDecimal"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/color_f2f2f2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginRight="@dimen/x30"
            android:text="@string/the_min_amount_should_be_equal_or_greater_than_1_and_the_max_amount_should_be_equal_or_less_than_the_total_amount_you_set"
            android:textColor="@color/color_808080" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/color_f2f2f2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x21"
            android:text="@string/send_to"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llSelectReceiveWallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x138"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivReceiveChain"
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/x88"
                android:layout_marginLeft="@dimen/x30" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReceiveWalletName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:singleLine="true"
                    android:text="@string/select_a_wallet_to_receive_token"
                    android:textColor="@color/color_29282a" />

                <TextView
                    android:id="@+id/tvReceiveWalletAddess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x10"
                    android:ellipsize="middle"
                    android:maxWidth="@dimen/x400"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="@string/input_wallet_address"
                    android:textColor="@color/color_29282a_40" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_enter1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/color_f2f2f2" />

        <LinearLayout
            android:id="@+id/llSellToken"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="@string/market_otc"
                android:textColor="@color/color_29282a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sellingToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="-/-"
                android:textColor="@color/color_29282a"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_enter1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_f2f2f2" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x138"
            android:layout_marginLeft="@dimen/x30">

            <TextView
                android:id="@+id/tvUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x21"
                android:text="@string/unit_price"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x4"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUnitPrice" />

            <TextView
                android:id="@+id/sellinngTokenQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x31"
                android:text="-/-"
                android:textColor="@color/color_29282a"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/etUnitPrice"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/etUnitPrice" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/color_f2f2f2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x21"
            android:text="@string/payment_wallet"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llSelectSendWallet"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/x138">

            <ImageView
                android:id="@+id/ivSendChain"
                android:layout_width="@dimen/x88"
                android:layout_marginLeft="@dimen/x30"
                android:layout_height="@dimen/x88" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/select_a_wallet_to_send_out_token"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:id="@+id/tvSendWalletName"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_29282a_40"
                    android:layout_marginTop="@dimen/x10"
                    android:maxEms="10"
                    android:ellipsize="middle"
                    android:text="@string/select_a_wallet"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:maxWidth="@dimen/x400"
                    android:id="@+id/tvSendWalletAddess"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_enter1"
                android:layout_height="15dp" />
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x25"
                android:background="@color/color_f2f2f2"/>
            <TextView
                android:id="@+id/cost"
                android:text="@string/miner_cost"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/color_29282a_40"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                android:layout_marginTop="@dimen/x25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/llOpen"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/x25"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCostEth"
                    android:layout_width="wrap_content"
                    android:text="0.0006 eth"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/ivShow"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_back_3"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.constraint.Group
                app:layout_constraintTop_toBottomOf="@+id/cost"
                app:constraint_referenced_ids="seekBar,llCost"
                android:id="@+id/group"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/cost"
                android:max="34"
                android:layout_marginTop="@dimen/x20"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/llCost"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x20"
                app:layout_constraintTop_toBottomOf="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/slow"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvGwei"
                    android:layout_width="wrap_content"
                    android:text="In"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/fast"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_f2f2f2" />
        <TextView
            android:id="@+id/tvCreateWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            android:layout_marginRight="@dimen/x30"
            android:gravity="right"
            android:text="@string/create_one_now"
            android:textColor="@color/mainColor"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x94"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/main_color_bt_bg"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>