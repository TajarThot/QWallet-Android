<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x123"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x122"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTokenAvatar"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_marginLeft="@dimen/x30" />

        <TextView
            android:id="@+id/tvTokenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:textColor="@color/color_29282a"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x100"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTokenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x54"
                android:textColor="@color/mainColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTokenMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x54"
                android:text="$10000"
                android:textColor="@color/mainColor" />
        </LinearLayout>

        <View
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRiseOrDown"
            android:layout_width="@dimen/x138"
            android:layout_height="@dimen/x54"
            android:layout_marginRight="@dimen/x45"
            android:background="@drawable/main_color_bt_bg"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_29282a_40"
        android:layout_height="@dimen/x1"/>
</LinearLayout>