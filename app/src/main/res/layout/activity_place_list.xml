<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/color_44cbfe"
        android:layout_height="115dp">
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="11dp"
            android:layout_width="wrap_content"
            android:text="@string/itinerary_check"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="336dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_chaxun"
            android:layout_height="32dp">
            <EditText
                android:id="@+id/etPhone"
                android:inputType="number"
                android:layout_width="240dp"
                android:textSize="13sp"
                android:layout_marginLeft="11dp"
                android:hint="@string/please_input_the_mobile_number"
                android:background="@null"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvChaxun"
                android:layout_width="60dp"
                android:background="@drawable/bg_chaxun_textview"
                android:text="@string/query"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:layout_height="30dp"/>
        </RelativeLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>