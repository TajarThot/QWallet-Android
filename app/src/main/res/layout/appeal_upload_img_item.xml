<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x325"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/x10"
    android:layout_height="@dimen/x246">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_e6e6e6"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/x77"
            android:layout_centerInParent="true"
            android:src="@mipmap/tabbar_plus"
            android:layout_height="@dimen/x77" />
        <ImageView
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/ivDelete"
            android:visibility="gone"
            android:layout_width="@dimen/x30"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginTop="@dimen/x8"
            android:src="@mipmap/tabbar_delete"
            android:layout_height="@dimen/x30" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginBottom="@dimen/x8"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>