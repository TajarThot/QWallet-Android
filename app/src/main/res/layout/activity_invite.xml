<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FEFCF2"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/llContent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTitle"
            android:layout_width="match_parent"
            android:layout_height="248dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:src="@mipmap/background_line_left"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#7D4F21"
                android:text="@string/my_rewards"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/background_line_right"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/background_receiveable"
            android:layout_marginRight="15dp"
            android:layout_height="88dp">
            <TextView
                android:id="@+id/toClaim"
                android:layout_width="wrap_content"
                android:text="@string/to_claim"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/color_fff7d8"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCanClaimQGAS"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvCanClaimQGAS"
                android:layout_width="wrap_content"
                android:textSize="23sp"
                app:layout_constraintLeft_toRightOf="@+id/toClaim"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/color_fff7d8"
                android:text="4"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="QGAS"
                app:layout_constraintLeft_toRightOf="@+id/tvCanClaimQGAS"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/color_fff7d8"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCanClaimQGAS"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvAtlistFriend"
                android:layout_width="196dp"
                android:textSize="10sp"
                android:textColor="@color/color_fff7d8"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/bg_can_claim"
                android:text="@string/you_can_claim_the_reward_when_successfully_invited_more_than_2_friends"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="17dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCanClaimQGAS"
                android:layout_height="27dp"/>
            <TextView
                android:id="@+id/tvClaimNow"
                android:layout_width="77dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bg_invite_claim"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/color_fb5340"
                android:text="@string/claim_now"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="17dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="25dp"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlInvited"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="23dp"
                android:background="@mipmap/background_number_left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvInviteCount"
                    android:layout_width="wrap_content"
                    android:text="@string/friend_referred"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvClaimedQgas"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/rlInvited"
                app:layout_constraintBottom_toBottomOf="@+id/rlInvited"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="15dp"
                android:text="@string/i_have_claimed"
                android:textColor="@color/color_f3522e"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="@+id/dot1"
                app:layout_constraintBottom_toBottomOf="@+id/dot1"
                android:background="@drawable/bg_share_rect_round"
                android:layout_height="6dp"/>
            <ImageView
                android:id="@+id/dot1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/base1"
                android:layout_width="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/origin"
                android:layout_height="10dp"/>
            <View
                android:id="@+id/base1"
                app:layout_constraintLeft_toLeftOf="@+id/dot1"
                app:layout_constraintRight_toRightOf="@+id/dot2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="1dp"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/dot2"
                android:layout_width="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/base1"
                app:layout_constraintRight_toRightOf="@+id/base2"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/origin"
                android:layout_height="10dp"/>
            <View
                android:id="@+id/base2"
                app:layout_constraintLeft_toLeftOf="@+id/dot2"
                app:layout_constraintRight_toRightOf="@+id/dot3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="1dp"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/dot3"
                android:layout_width="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/base2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/origin"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dot1"
                app:layout_constraintLeft_toLeftOf="@+id/dot1"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="@+id/dot1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/_1_friend"
                    android:textSize="10sp"
                    android:textColor="@color/color_f3522e"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv1FreindQgas"
                    android:layout_width="wrap_content"
                    android:text="@string/get_x_qgas"
                    android:textSize="12sp"
                    android:textColor="@color/color_f3522e"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dot2"
                app:layout_constraintLeft_toLeftOf="@+id/dot2"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="@+id/dot2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/_2_friend"
                    android:textSize="10sp"
                    android:textColor="@color/color_f3522e"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv2FreindQgas"
                    android:layout_width="wrap_content"
                    android:text="@string/get_x_qgas"
                    android:textSize="12sp"
                    android:textColor="@color/color_f3522e"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dot3"
                app:layout_constraintLeft_toLeftOf="@+id/dot3"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="@+id/dot3"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/more_friends"
                    android:textSize="10sp"
                    android:textColor="@color/color_f3522e"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/more_qgas"
                    android:textSize="12sp"
                    android:textColor="@color/color_f3522e"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:src="@mipmap/background_line_left"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#7D4F21"
                android:text="@string/my_referral_code"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/background_line_right"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCopy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x77"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIniviteCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a61413"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a61413"
                android:layout_marginLeft="@dimen/x40"
                android:text="@string/copy_invite_code"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbottom"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/x113">
            <TextView
                android:id="@+id/tvInivteNow"
                android:layout_width="230dp"
                android:background="@drawable/bg_refer_now"
                android:layout_marginLeft="@dimen/x30"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/refer_now"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="38dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x68"
            android:layout_marginTop="10dp"
            android:background="#F6EAD4"
            android:gravity="center"
            android:text="@string/ranking_in_the_last_30_days"
            android:textColor="#BB7944"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>