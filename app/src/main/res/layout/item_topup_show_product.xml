<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    android:layout_height="210dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivBack"
            android:scaleType="centerCrop"
            android:layout_width="160dp"
            android:layout_height="132dp"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_location"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="CHINA"
            android:paddingLeft="4dp"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            android:paddingRight="4dp"
            android:drawableLeft="@mipmap/location"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_height="15dp"/>
        <LinearLayout
            android:id="@+id/llParent"
            android:layout_below="@+id/ivBack"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvOperator"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_29282a"
                    android:text="-/-"
                    android:textSize="13sp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvAreaOperator"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_29282a"
                    android:text=""
                    android:textSize="13sp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
<!--            <TextView-->
<!--                android:id="@+id/tvOperatorEn"-->
<!--                android:visibility="gone"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:textColor="@color/white"-->
<!--                android:text="-/-"-->
<!--                android:textSize="13sp"-->
<!--                android:layout_marginLeft="15dp"-->
<!--                android:layout_height="wrap_content" />-->
<!--            <TextView-->
<!--                android:id="@+id/tvAreaOperatorEn"-->
<!--                android:visibility="gone"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:textColor="@color/white"-->
<!--                android:text="-/-"-->
<!--                android:textSize="12sp"-->
<!--                android:layout_marginLeft="15dp"-->
<!--                android:layout_height="wrap_content" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDiscount"
                    android:textSize="19sp"
                    android:text="100"
                    android:textColor="@color/color_ff3669"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color_ff3669"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="4dp"
                    android:layout_alignBottom="@+id/tvDiscount"
                    android:layout_toRightOf="@+id/tvDiscount"
                    android:text="@string/discount"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/recharge_phone_bill"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/color_108ee9"
                    android:layout_below="@+id/tvDiscount"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/noProduct"
        android:background="@drawable/bg_white_50_6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingLeft="22dp"
            android:paddingRight="6dp"
            android:background="@drawable/bg_topup_come_soon"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:text="@string/coming_soon_next_month"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/sold_out_topup"
            android:background="@drawable/bg_black_30_20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:textSize="13sp"
            android:textColor="@color/color_e6e6e6"
            android:paddingBottom="3dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>