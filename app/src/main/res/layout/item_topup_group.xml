<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="59dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f2f2f2"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="58dp">
        <RelativeLayout
            android:id="@+id/llAvatar"
            android:layout_width="52dp"
            android:orientation="horizontal"
            android:layout_height="32dp">

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvGroupInfo"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_1e1e24"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNeedPartners"
                android:layout_width="wrap_content"
                android:textColor="@color/color_ff5956"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvRemainTime"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_808080"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvJoinNow"
            android:layout_width="75dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/main_color_bt_bg"
            android:text="@string/join_now_group"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>