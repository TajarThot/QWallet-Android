<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/color_f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/staking_amount_qlc"
                android:textColor="@color/color_808080"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvQlcCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0.02"
                android:textColor="@color/color_29282a"
                android:textSize="23sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/voting_earnings_qgas"
                        android:textColor="@color/color_808080"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvVoteEarnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-/-"
                        android:textColor="@color/color_0cb8ae"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x2"
                    android:layout_height="@dimen/x88"
                    android:background="@color/color_f2f2f2" />

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mining_earnings_qgas"
                        android:textColor="@color/color_808080"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-/-"
                        android:textColor="@color/color_0cb8ae"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/color_f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvStakeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staking_in_progress"
                android:textColor="@color/color_29282a"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_stake_detail"
                android:textColor="@color/color_808080"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvQlcCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2321.0123 QLC"
                android:textColor="@color/color_29282a"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_to_revoke_on"
                android:textColor="@color/color_808080"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/optionRevokeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:22:23 2019-08-01"
                android:textColor="@color/color_29282a"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staking_type"
                android:textColor="@color/color_808080"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvStakeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_voting_mining_node"
                android:textColor="@color/color_29282a"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/color_f2f2f2" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="@color/color_29282a"
            android:text="@string/accounts_invocation_hash"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_height="46dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/stake_from_neo_address"
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_808080"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/x30"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvNeoAddress"
                android:textSize="14sp"
                android:textColor="@color/color_29282a"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="--"
                android:layout_marginRight="@dimen/x30"
                android:drawablePadding="@dimen/x40"
                android:drawableRight="@mipmap/copy_h"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/stake_to_go_qlc_address"
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_808080"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/x30"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvQlcAddress"
                android:textSize="14sp"
                android:textColor="@color/color_29282a"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="--"
                android:layout_marginRight="@dimen/x30"
                android:drawablePadding="@dimen/x40"
                android:drawableRight="@mipmap/copy_h"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/transaction_neo_invocation_hash"
                android:layout_marginTop="@dimen/x12"
                android:textColor="@color/color_808080"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/x30"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvNeoTxid"
                android:textSize="14sp"
                android:textColor="@color/color_29282a"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="--"
                android:layout_marginRight="@dimen/x30"
                android:drawablePadding="@dimen/x40"
                android:drawableRight="@mipmap/copy_h"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>