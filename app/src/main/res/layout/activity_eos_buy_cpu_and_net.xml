<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x92"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x23"
                    android:background="#F9F9F9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:layout_marginTop="@dimen/x56"
                    android:text="CPU"
                    android:textColor="@color/color_29282a" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/staked" />

                    <View
                        android:layout_width="0px"
                        android:layout_height="@dimen/x1"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/stakedCpuEos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x45" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available" />

                    <View
                        android:layout_width="0px"
                        android:layout_height="@dimen/x1"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/avaliableCpu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x45"
                        android:textColor="@color/mainColor" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:layout_marginTop="@dimen/x36"
                    android:text="NET"
                    android:textColor="@color/color_29282a" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/staked" />

                    <View
                        android:layout_width="0px"
                        android:layout_height="@dimen/x1"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/stakedNetEos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x45" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:layout_marginBottom="@dimen/x20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available" />

                    <View
                        android:layout_width="0px"
                        android:layout_height="@dimen/x1"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/avaliableNet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x45"
                        android:textColor="@color/mainColor" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x23"
                    android:background="#F9F9F9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.stratagile.qlink.view.SmoothCheckBox
                            android:id="@+id/checkBoxStake"
                            android:layout_width="@dimen/x45"
                            android:layout_height="@dimen/x45"
                            android:layout_marginRight="@dimen/x12"
                            app:color_checked="@color/mainColor"
                            app:color_unchecked="@color/white"
                            app:stroke_width="@dimen/x4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x10"
                            android:text="@string/stake" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.stratagile.qlink.view.SmoothCheckBox
                            android:id="@+id/checkBoxReclaim"
                            android:layout_width="@dimen/x45"
                            android:layout_height="@dimen/x45"
                            android:layout_marginRight="@dimen/x12"
                            app:color_checked="@color/mainColor"
                            app:color_unchecked="@color/white"
                            app:stroke_width="@dimen/x4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x10"
                            android:text="@string/reclaim" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llStake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x35"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/amount_to_stake"
                            android:textColor="@color/color_29282a"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="0px"
                            android:layout_height="@dimen/x1"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/eosBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x45"
                            android:textColor="@color/mainColor"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etStakeEos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x5"
                        android:layout_marginRight="@dimen/x45"
                        android:background="@null"
                        android:hint="@string/input_eos_amount"
                        android:inputType="numberDecimal"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@color/color_29282a_40" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginRight="@dimen/x45">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/stake_ration" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/x20"
                            android:layout_marginBottom="@dimen/x20"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/cpuRation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CPU ≈ 0.00ms" />

                            <TextView
                                android:id="@+id/netRation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NET ≈ 0.00KB" />
                        </LinearLayout>
                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x25"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:max="100" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginBottom="@dimen/x20"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CPU" />

                        <View
                            android:layout_width="0px"
                            android:layout_height="@dimen/x1"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x45"
                            android:text="NET" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llReclaim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x35"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginRight="@dimen/x45"
                        android:background="@drawable/relclaim_tip_bg"
                        android:padding="@dimen/x17"
                        android:text="@string/tip_reclaimable_resources_total_resources_consumed_resources_consumption_from_reclaiming_process_resources_staked_by_others"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x25"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reclaim_cpu_amount"
                            android:textColor="@color/color_29282a"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="0px"
                            android:layout_height="@dimen/x1"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/cpuBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x45"
                            android:textColor="@color/color_29282a_40"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x5"
                        android:layout_marginRight="@dimen/x45"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etReclaimCpu"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/input_cpu_amount"
                            android:inputType="numberDecimal"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5"
                            android:text="us" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@color/color_29282a_40" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x25"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reclaim_net_amount"
                            android:textColor="@color/color_29282a"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="0px"
                            android:layout_height="@dimen/x1"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/netBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x45"
                            android:textColor="@color/color_29282a_40"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x5"
                        android:layout_marginRight="@dimen/x45"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etReclaimNet"
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/input_net_amount"
                            android:inputType="numberDecimal"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5"
                            android:text="Bytes" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:layout_marginLeft="@dimen/x45"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@color/color_29282a_40" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:layout_marginTop="@dimen/x23"
                    android:text="@string/recipient_account"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/etRecipientAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x45"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginRight="@dimen/x45"
                    android:background="@null"
                    android:textSize="13sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x45"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@color/color_29282a_40" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/tvOpreate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            android:layout_alignParentBottom="true"
            android:background="@color/mainColor"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:text="@string/stake"
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>