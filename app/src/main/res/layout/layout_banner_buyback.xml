<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlInvite"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x175"
    android:layout_marginBottom="@dimen/x20"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/x173"
        android:layout_height="@dimen/x150"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/buyback" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="@string/qgas_buyback_and_burn"
        android:textColor="@color/color_29282a"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/main_color_bt_bg"
        android:drawableRight="@mipmap/enter_n"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:text="@string/more_details_buyback"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvJoinNow"
        android:layout_toRightOf="@+id/tvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/main_color_bt_bg"
        android:drawableRight="@mipmap/enter_n"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:text="@string/join_now_group"
        android:textColor="@color/white"
        android:textSize="10sp" />

</RelativeLayout>