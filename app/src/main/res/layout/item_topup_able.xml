<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="12dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/color_276cb7"
    app:cardElevation="3dp"
    android:layout_marginRight="12dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvOperator"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:text="-/-"
            android:textSize="19sp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvAreaOperator"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="-/-"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:id="@+id/explain"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:id="@+id/description"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPrice"
                android:textSize="25sp"
                android:text="100"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvFiat"
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/tvPrice"
                android:layout_marginLeft="2dp"
                android:text="CNY"
                android:layout_alignBottom="@+id/tvPrice"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/telephone_bill"
                android:layout_marginLeft="4dp"
                android:textColor="#87BCEB"
                android:layout_below="@+id/tvPrice"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/tvOpreate"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_centerVertical="true"
                android:background="@drawable/topup_price_item_bg"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/rmbEn"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:text="¥"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_1e1e24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/price"
                    android:textSize="17sp"
                    tools:text="34"
                    android:textColor="@color/color_1e1e24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/payTokenSymbol"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:layout_marginTop="1dp"
                    android:text="QGAS"
                    android:textColor="@color/color_1e1e24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/rmbCn"
                    android:textSize="12sp"
                    android:layout_marginTop="1dp"
                    android:text="¥"
                    android:textColor="@color/color_1e1e24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="12sp"
                    android:text="+"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/color_1e1e24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/deductionAmount"
                    android:textSize="17sp"
                    tools:text="34"
                    android:textColor="@color/color_1e1e24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/deductionTokenSymbol"
                    android:textSize="12sp"
                    android:text="QGAS"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/color_1e1e24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>