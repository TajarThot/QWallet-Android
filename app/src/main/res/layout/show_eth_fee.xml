<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="@dimen/x60"
                    android:layout_gravity="right"
                    android:src="@mipmap/close_h"
                    android:layout_marginTop="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_height="@dimen/x60" />
                <LinearLayout
                    android:id="@+id/llSelectQlcWallet"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/x90">

                    <ImageView
                        android:id="@+id/ivSendChain"
                        android:src="@mipmap/icons_eth_wallet"
                        android:layout_width="@dimen/x88"
                        android:layout_height="@dimen/x88" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="ETH Chain wallet 01"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_29282a"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/x30"
                            android:id="@+id/tvEthWalletName1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_29282a_40"
                            android:layout_marginTop="@dimen/x10"
                            android:maxEms="8"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:layout_marginLeft="@dimen/x30"
                            android:maxWidth="@dimen/x400"
                            android:id="@+id/tvEthWalletAddess1"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="To"
                    android:layout_marginTop="@dimen/x40"
                    android:paddingLeft="@dimen/x30"
                    android:textColor="@color/color_808080"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvToAddress"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x10"
                    android:text="0x235eD15f617039f6572d6A3BE2A23b0a83717873"
                    android:textColor="@color/color_29282a"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/amount"
                    android:paddingLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x40"
                    android:textColor="@color/color_808080"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvEthAmount1"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="@dimen/x10"
                    android:text="200QGAS"
                    android:textColor="@color/color_29282a"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/gas_fee"
                    android:paddingLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x40"
                    android:textColor="@color/color_808080"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="80dp">
                    <LinearLayout
                        android:id="@+id/llSlow"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/eth_fee_bg"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/slow"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/slowCostEth"
                            android:text="0.01123ETH"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/slowCostUsd"
                            android:text="$4.19"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:id="@+id/llAverage"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/eth_fee_bg"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/average"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/averageCostEth"
                            android:text="0.01123ETH"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/averageCostUsd"
                            android:text="$4.19"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:id="@+id/llFast"
                        android:layout_width="0dp"
                        android:background="@drawable/eth_fee_bg"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Fast"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/fastCostEth"
                            android:text="0.01123ETH"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/fastCostUsd"
                            android:text="$4.19"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/color_e6e6e6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x96"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="@string/confirm"
                        android:textColor="@color/mainColor" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivQRCode"
                android:visibility="gone"
                android:background="@color/white"
                android:padding="@dimen/x20"
                android:layout_width="@dimen/x500"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x120"
                android:layout_height="@dimen/x340" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>