<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_f2f2f2"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:background="@color/color_f2f2f2"
            app:elevation="0px"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/llSelectCountry"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="46dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/country_code"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvCountry"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvArea"
                        android:text="@string/please_choose"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginRight="15dp"
                        android:drawableRight="@mipmap/icon_enter1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/color_f2f2f2"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="46dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/phone_number"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etContact"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="27dp"
                        android:textSize="19sp"
                        android:inputType="phone"
                        android:gravity="right"
                        android:textColorHint="#B3CEFF"
                        android:hint="100 0000 0000"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@null"
                        android:textColor="@color/color_29282a" />
                    <ImageView
                        android:id="@+id/ivContact"
                        android:layout_width="21dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/contacts"
                        android:layout_height="21dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/color_f2f2f2"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/llSelectOperator"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="46dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/operator"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvIsp"
                        android:layout_width="wrap_content"
                        android:text="@string/please_choose"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginRight="15dp"
                        android:drawableRight="@mipmap/icon_enter1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/color_f2f2f2"
                    android:layout_marginLeft="15dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/llRegion"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="46dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/region"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvRegion"
                        android:layout_width="wrap_content"
                        android:text="@string/optional"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp"
                        android:layout_marginRight="15dp"
                        android:drawableRight="@mipmap/icon_enter1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/x1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/qurryMobile"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="15dp"
                    android:text="@string/look_at_the_products_on_sale"
                    android:background="@drawable/main_color_bt_bg"
                    android:layout_height="47dp" />
                <TextView
                    android:id="@+id/tvFound"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/color_808080"
                    android:text="@string/we_find_that_the_following_operators_can_use_the_recharge_charges_for_the_above_mobile_phone_numbers"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/noProduct"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/color_1e1e24"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="@string/preferences_for_recharge_in_this_area_will_soon_be_introduced_please_look_forward_to_it"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/payTokenRecyclerView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>