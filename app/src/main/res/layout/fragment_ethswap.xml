<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_f2f2f2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/color_f2f2f2"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:text="Swap Wallet From"
                android:textColor="@color/color_29282a"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/llSelectNeoWallet"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="61dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icons_eth_wallet" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEthWalletName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/select_a_eth_wallet"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvEthWalletAddess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:ellipsize="middle"
                        android:maxWidth="@dimen/x400"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text="@string/select_a_eth_wallet"
                        android:textColor="@color/color_29282a_40"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_f2f2f2"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:textColor="@color/color_808080"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:text="Swap Wallet To"
                android:textColor="@color/color_29282a"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/llSelectETHWallet"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="61dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_country"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icons_neo_wallet" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNeoWalletName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/select_a_neo_wallet"
                        android:textColor="@color/color_29282a"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvNeoWalletAddess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:ellipsize="middle"
                        android:maxWidth="@dimen/x400"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text="@string/select_a_neo_wallet"
                        android:textColor="@color/color_29282a_40"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_enter1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f2f2f2"
                android:paddingLeft="21dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="@string/select_a_neo_wallet"
                android:paddingRight="21dp"
                android:textColor="@color/color_808080"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/amount_stake"
                    android:textColor="@color/color_29282a"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvQlcBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance: -/- QLC"
                    android:textColor="@color/mainColor"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etStakeQlcAmount"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/from_1_s_qlc"
                    android:inputType="number"
                    android:maxLength="9"
                    android:textColor="@color/color_29282a"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QLC"
                    android:textColor="@color/color_29282a"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/miniSwapQlc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f2f2f2"
                android:paddingLeft="21dp"
                android:paddingTop="4dp"
                android:paddingRight="21dp"
                android:paddingBottom="11dp"
                android:text="@string/the_minimum_stake_amount_is_1_s_qlc"
                android:textColor="@color/color_808080"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/invoke"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/unable_bt_bg"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </LinearLayout>

        <wendu.dsbridge.DWebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>