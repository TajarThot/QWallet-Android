<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="6dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="6dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/defi_record_n"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tvLockTime"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSwapState"
            android:layout_marginRight="15dp"
            android:textSize="13sp"
            android:textColor="@color/color_07cdb3"
            android:layout_width="wrap_content"
            android:text="@string/revoked"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSwapType"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/color_333"
        android:text="@string/nep5_token_erc20_token"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Swap Amount (QLC): "
            android:layout_height="wrap_content"/>
        <TextView
            android:text="5"
            android:textColor="@color/color_07cdb3"
            android:id="@+id/qlcAmount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOperator"
            android:layout_width="60dp"
            android:background="@drawable/main_color_bt_bg"
            android:textColor="@color/white"
            android:text="@string/claim"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_height="30dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/expireTime"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:text="expire in 11 hours"
        android:layout_marginBottom="8dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"/>
</LinearLayout>