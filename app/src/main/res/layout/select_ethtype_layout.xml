<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_4c000000">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:gravity="center"
            android:background="@color/white"
            android:text="Select Path"
            android:textColor="#FF9B9B9B"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_333" />


        <TextView
            android:id="@+id/tvDefault"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:background="@drawable/bt_nobgd"
            android:text="@string/ETH_JAXX_TYPE"
            android:gravity="center"
            android:textColor="@color/color_FF007AFF"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            />
        <TextView
            android:id="@+id/tvLedger"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:background="@drawable/bt_nobgd"
            android:text="@string/ETH_LEDGER_TYPE"
            android:gravity="center"
            android:textColor="@color/color_FF007AFF"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            />
        <TextView
            android:id="@+id/tvCustom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:background="@drawable/bt_nobgd"
            android:text="@string/ETH_CUSTOM_TYPE"
            android:gravity="center"
            android:textColor="@color/color_FF007AFF"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />

        <TextView
            android:id="@+id/bt_cancal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:background="@drawable/bt_nobgd"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="@color/color_FF007AFF"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>