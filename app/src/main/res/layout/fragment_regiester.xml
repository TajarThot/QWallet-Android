<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/x46"
    android:orientation="vertical"
    android:paddingRight="@dimen/x46"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llEmail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="邮箱"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llphone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:text="+86"
            android:textColor="@color/color_29282a"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:hint="手机号"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etVCode"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:textSize="16sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvVerificationCode"
            android:layout_width="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/color_b3b3b3"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="密码（6位或以上）"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etRepeatPassword"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="重复密码（6位或以上）"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etInviteCode"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="邀请码（选填）"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <TextView
        android:id="@+id/registMode"
        android:layout_width="wrap_content"
        android:text="邮箱注册"
        android:layout_marginTop="@dimen/x30"
        android:textSize="16sp"
        android:textColor="@color/mainColor"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/x60"
        android:gravity="center"
        android:text="注册"
        android:background="@drawable/main_color_bt_bg"
        android:layout_height="@dimen/x94" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_999"
            android:text="Read and agree on Terms of "
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/mainColor"
            android:text="Service and Privacy Policy"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>