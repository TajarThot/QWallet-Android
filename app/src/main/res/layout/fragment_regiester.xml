<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/x30"
    android:orientation="vertical"
    android:paddingRight="@dimen/x30"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="@string/email"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etVCode"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/verification_code"
            android:textSize="16sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvVerificationCode"
            android:layout_width="wrap_content"
            android:text="@string/get_the_code"
            android:textColor="@color/mainColor"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/password_at_least_6_chars"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etRepeatPassword"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/repeat_the_password"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x94">
        <EditText
            android:id="@+id/etInviteCode"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/invitation_code_optional"
            android:textSize="16sp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_f2f2f2"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/x60"
        android:gravity="center"
        android:text="@string/sign_up"
        android:background="@drawable/main_color_bt_bg"
        android:layout_height="@dimen/x94" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/x58"
        android:layout_height="wrap_content">
        <com.stratagile.qlink.view.SmoothCheckBox
            android:id="@+id/checkBox"
            android:layout_width="@dimen/x40"
            android:layout_marginRight="@dimen/x12"
            app:color_unchecked_stroke="@color/mainColor"
            app:color_unchecked="@color/white"
            app:color_checked="@color/mainColor"
            app:stroke_width="@dimen/x4"
            android:layout_height="@dimen/x40"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/read_and_agree_on_terms_of"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/x8"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/servicePrivacyPolicy"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="@string/service_and_privacy_policy"
            android:textColor="@color/mainColor"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>