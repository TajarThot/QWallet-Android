<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#fffe6b4b" android:endColor="#fffc5140" android:angle="180" />
            <corners android:radius="43dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ffff6b4b" android:endColor="#fff65140" android:angle="180" />
            <corners android:radius="43dp" />
        </shape>
    </item>
</selector>